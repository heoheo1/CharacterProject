<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WomanActivity">


    <EditText
        android:id="@+id/edt_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cafe24_oneprettynight"
        android:gravity="center"
        android:hint="이름을 입력해주세요."
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_simple_Charman"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/simple_man"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_man"
        />

    <ImageView
        android:id="@+id/img_man_hair"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_man" />

    <ImageView
        android:id="@+id/img_man_clothes"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_man" />

    <ImageView
        android:id="@+id/img_man_shoes"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_man" />

    <ImageView
        android:id="@+id/img_man_Accessories"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_man" />

    <ImageView
        android:id="@+id/change_manHair1"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/manhair_change1"
        app:layout_constraintTop_toBottomOf="@+id/img_simple_Charman"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/change_manHair2"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/manhair_change2"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_manHair1"
        app:layout_constraintVertical_bias="0.031" />

    <ImageView
        android:id="@+id/change_manclothes1"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/manclothes_change1"
        app:layout_constraintTop_toBottomOf="@+id/img_simple_Charman"
        app:layout_constraintLeft_toRightOf="@id/change_manHair1"/>

    <ImageView
        android:id="@+id/change_manclothes2"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/manclothes_change2"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintLeft_toRightOf="@id/change_manHair2"
        app:layout_constraintTop_toBottomOf="@+id/change_manclothes1"
        app:layout_constraintVertical_bias="0.031" />

    <ImageView
        android:id="@+id/change_manshoes1"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/manshoes_change1"
        app:layout_constraintTop_toBottomOf="@+id/img_simple_Charman"
        app:layout_constraintLeft_toRightOf="@id/change_manclothes1"/>

    <ImageView
        android:id="@+id/change_manshoes2"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/manshoes_change2"
        app:layout_constraintTop_toBottomOf="@+id/change_manshoes1"
        app:layout_constraintLeft_toRightOf="@id/change_manclothes2"/>
    <ImageView
        android:id="@+id/change_manAccessories1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/manaccessories_change1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_simple_Charman"
        app:layout_constraintLeft_toRightOf="@id/change_manshoes1"/>

    <ImageView
        android:id="@+id/change_manAccessories2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="31dp"
        android:src="@drawable/manaccessories_change2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintLeft_toRightOf="@id/change_manshoes2"
        app:layout_constraintTop_toBottomOf="@+id/change_manAccessories1" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/cafe24_oneprettynight"
        android:text="저장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_manshoes2"
        app:layout_constraintVertical_bias="0.016" />

</androidx.constraintlayout.widget.ConstraintLayout>