<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/simple_CharMan"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/simple_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/man_hair"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/man_clothes"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/man_shoes"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/man_Accessories"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <ImageView
        android:id="@+id/simple_CharWoman"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/simple_char"
        app:layout_constraintLeft_toRightOf="@+id/simple_CharMan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/woman_hair"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toRightOf="@+id/simple_CharMan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/woman_clothes"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toRightOf="@+id/simple_CharMan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/woman_shoes"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toRightOf="@+id/simple_CharMan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/woman_Accessories"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toRightOf="@+id/simple_CharMan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/char_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edt_color"
        android:elevation="10dp"
        android:ems="5"
        android:gravity="center"
        android:maxEms="5"
        android:padding="5dp"
        android:singleLine="true"
        android:text="남자"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simple_CharMan" />


    <EditText
        android:id="@+id/char_Woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edt_color"
        android:elevation="10dp"
        android:gravity="center"
        android:ems="5"
        android:maxEms="5"
        android:padding="5dp"
        android:singleLine="true"
        android:text="여자"
        app:layout_constraintTop_toBottomOf="@+id/simple_CharWoman"
        app:layout_constraintLeft_toLeftOf="@+id/datePicker"
        />

    <ImageView
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/love"
        app:layout_constraintStart_toEndOf="@+id/char_man"
        app:layout_constraintTop_toBottomOf="@+id/simple_CharMan"
        tools:layout_editor_absoluteY="558dp" />

    <TextView
        android:id="@+id/edit_endDateBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp"
        android:text="우리가 만난 날짜 : "
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePicker" />

    <TextView
        android:id="@+id/edit_result"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp"
        android:text="우리가 사랑한지 D+0"
        android:textSize="14dp"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_endDateBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>