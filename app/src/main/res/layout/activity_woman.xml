<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WomanActivity">

    <ImageView
        android:id="@+id/img_simple_CharWoman"
        android:layout_width="270dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/simple_char"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_woman_hair"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_woman_clothes"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_woman_shoes"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_woman_Accessories"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/change_womanHair1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/womanhair_change1"
        app:layout_constraintTop_toBottomOf="@+id/img_simple_CharWoman"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/change_womanHair2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/womanhair_change2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/change_womanHair1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/change_womanclothes1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/womanclothes_change1"
        app:layout_constraintTop_toBottomOf="@+id/img_simple_CharWoman"
        app:layout_constraintLeft_toRightOf="@id/change_womanHair1"/>

    <ImageView
        android:id="@+id/change_womanclothes2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/womanclothes_change2"
        app:layout_constraintTop_toBottomOf="@+id/change_womanclothes1"
        app:layout_constraintLeft_toRightOf="@id/change_womanHair2"/>

</androidx.constraintlayout.widget.ConstraintLayout>